@using MyEvernote.WebApp.ViewModels;
@model WarningViewModel

@{
    ViewBag.Title = Model.Title;
}

<link href="~/Content/Login-Register.css" rel="stylesheet" />

@using (Html.BeginForm())
{
    <section class="login-info">
        <div class="container">
            <div class="row main">
                <div class="form-header">
                    <h1 class="text-center ">@Model.Header</h1>
                </div>
                <div class="main-content">
                    <div class="text-warning">
                        <h2><span class="glyphicon glyphicon-warning-sign"></span>&nbsp;&nbsp;&nbsp;@Model.Title</h2>
                        <hr />
                        <p class="text-justify">
                            <ul>
                                @foreach (string item in @Model.Item)
                                {
                                    <li>@item</li>
                                }
                            </ul>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>
}

@{
    string js = String.Empty;
    if (Model.IsRedirecting)
    {
        js = "setTimeout(function () { window.location = '" + Model.RedirectingUrl + "'; }, " + Model.Timeout + ")";
    }
}

<script>
    $(function () {
        @Html.Raw(js);
    });
</script>