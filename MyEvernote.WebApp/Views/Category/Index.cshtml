@model IEnumerable<MyEvernote.Entities.Category>

@{
    ViewBag.Title = "Kategoriler";
}

<div class="row">
    <div class="col-md-8 col-lg-offset-2">
        <h2>Kategoriler</h2>
    </div>
</div>

<div class="row">
    <div class="col-md-8 col-lg-offset-2">
        <p>
            <a href="/category/create" class="btn btn-primary">
                <span class="glyphicon glyphicon-plus"></span> Ekle
            </a>
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CreatedOn)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ModifiedOn)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ModifiedUsername)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedOn)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ModifiedOn)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ModifiedUsername)
                    </td>
                    <td>
                        <a href="/category/edit/@item.Id" class="btn btn-warning btn-sm" title="Düzenle">
                            <span class="glyphicon glyphicon-edit"></span>
                        </a>
                        <a href="/category/details/@item.Id" class="btn btn-info btn-sm" title="Ayrıntılar">
                            <span class="glyphicon glyphicon-search"></span>
                        </a>
                        <a href="/category/delete/@item.Id" class="btn btn-danger btn-sm" title="Sil">
                            <span class="glyphicon glyphicon-trash"></span>
                        </a>
                        @*@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })*@
                    </td>
                </tr>
            }

        </table>
    </div>
</div>

